---
import Badge from '../ui/Badge.astro';
import { menuCategories } from '../../data/menu-categories.data';
---

<section class="mx-auto max-w-6xl py-18 px-4 md:px-0" data-menu-content>
  {menuCategories.map((category) => (
    <section
      id={category.id}
      class="menu-category mb-10 scroll-mt-40"
      data-category-section={category.id}
      aria-labelledby={`${category.id}-title`}
    >
      <div class="mb-8 flex items-center justify-between">
        <h2 id={`${category.id}-title`} class="font-display text-2xl text-secondary">{category.name}</h2>
        <div class="ml-4 h-px flex-1 bg-secondary/10" aria-hidden="true"></div>
      </div>

      <div class="gap-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {category.items.map((item) => (
          <article class="group flex items-start gap-4">
            <div class="size-25 md:size-22 shrink-0 overflow-hidden rounded-lg shadow-sm">
              <img src={item.image} alt={item.name} class="h-full w-full object-cover" loading="lazy" />
            </div>

            <div class="min-w-0 flex-1">
              <div class="flex items-start justify-between gap-2">
                <h3 class="font-display text-lg leading-tight text-secondary">{item.name}</h3>
                <p class="font-bold text-secondary">{item.price}</p>
              </div>
              <p class="mt-1 text-xs text-secondary/60">{item.description}</p>
              {item.badge && (
                <Badge class="mt-2 rounded border border-primary/20 bg-transparent px-2 py-0.5 text-[9px] tracking-tight text-primary">
                  {item.badge}
                </Badge>
              )}
            </div>
          </article>
        ))}
      </div>
    </section>
  ))}
</section>
